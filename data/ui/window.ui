<?xml version="1.0" encoding="UTF-8"?>
<interface>
  <template class="BudsWindow" parent="HeApplicationWindow">
    <property name="title">Buds</property>
    <child>
      <object class="GtkBox">
        <property name="orientation">vertical</property>
        <property name="spacing">0</property>
        <child>
          <object class="HeAppBar">
            <property name="show_buttons">true</property>
            <property name="show_back">false</property>
            <child>
              <object class="GtkMenuButton">
                <property name="icon-name">open-menu-symbolic</property>
                <property name="menu-model">primary_menu</property>
              </object>
            </child>
          </object>
        </child>
        <child>
          <object class="GtkCenterBox">
            <property name="vexpand">true</property>
            <child type="center">
              <object class="GtkLabel">
                <property name="label">Hello World</property>
                <style>
                  <class name="display" />
                </style>
              </object>
            </child>
          </object>
        </child>
      </object>
    </child>
  </template>

  <menu id="primary_menu">
    <section>
      <item>
        <attribute name="label" translatable="yes">_About Buds</attribute>
        <attribute name="action">app.about</attribute>
      </item>
    </section>
  </menu>
</interface>
